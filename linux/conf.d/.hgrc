[ui]
username = 你的用户名 <你的邮箱>
verbose = True
ssh = ssh -i ~/.ssh/id_rsa -C
ignore = ~/.hgignore


[hooks]
#commit.autopush = hg push


[extensions]
hgext.purge=
color=
hgext.fetch=

[color]
status.modified = blue underline red_background
status.added = green
status.removed = red blue_background
status.deleted = cyan underline
status.unknown = magenta underline
status.ignored = black

diff.diffline =
diff.extended = cyan
diff.file_a = red
diff.file_b = green
diff.hunk = magenta
diff.deleted = red
diff.inserted = green
diff.changed = white
diff.trailingwhitespace = red_background

